<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:descendantFocusability="blocksDescendants"

    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:descendantFocusability="blocksDescendants"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:id="@+id/img"
            android:layout_width="180sp"
            android:layout_height="88dp"
            android:layout_marginStart="200sp"
            android:scaleType="centerCrop"
            android:src="@drawable/login_bck" />


        <TextView
            android:id="@+id/txtA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:fontFamily="sans-serif-medium"
            android:padding="2sp"
            android:text="Chicken handi half"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txtFoodprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:fontFamily="sans-serif-light"
            android:text="  â‚¹250"

            android:textColor="#423E3E"
            android:textSize="15sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btnRemove"
            android:layout_width="95sp"
            android:layout_height="43sp"
            android:layout_below="@+id/txtFoodprice"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="REMOVE"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </RelativeLayout>

</RelativeLayout>